<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_vista" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/cancion_imagen"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/sym_def_app_icon"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancion_nombre"
                android:layout_toRightOf="@+id/cancion_imagen"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancion_artista"
                android:layout_toRightOf="@+id/cancion_imagen"
                android:layout_below="@+id/cancion_nombre"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancion_album"
                android:layout_toRightOf="@+id/cancion_imagen"
                android:layout_below="@+id/cancion_artista"
                android:textSize="14sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>